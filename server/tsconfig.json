{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "*": [
                "server/node_modules/*",
                "server/src/types/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}